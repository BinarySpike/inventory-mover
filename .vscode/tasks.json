{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Push to Factorio",
            "type": "shell",
            "command": "$info = (Get-Content info.json | ConvertFrom-Json); Remove-Item ./*.zip; Remove-Item -Recurse $ENV:APPDATA\\Factorio\\mods\\$($info.name)*; Copy-Item -Recurse -Path . -Destination \"$env:APPDATA\\Factorio\\mods\\$($info.name)_$($info.version)\"; 7z a \"./$($info.name)_$($info.version).zip\" ../$($info.name)/ -x!'*/.*'",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}